{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Install",
      "args": [
        "install"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Compile Typescript",
      "args": [
        "run",
        "compile:ts"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Compile SCSS",
      "args": [
        "run",
        "compile:scss"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Cleanup",
      "args": [
        "install",
        "--production"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Build Docker Image",
      "args": [
        "build",
        "-t",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Upload Docker Image",
      "args": [
        "push",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/google-cloud-cli",
      "entrypoint": "gcloud",
      "id": "Deploy Docker Image",
      "args": [
        "run",
        "deploy",
        "videogallery",
        "--image=europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery:latest",
        "--region=europe-west4",
        "--project=veenendaal-base"
      ]
    },
    {
      "name": "bitnami/trivy:latest",
      "id": "Run Trivy",
      "allowFailure": true,
      "args": [
        "image",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery:latest",
        "--cache-dir",
        "/tmp/.cache image"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/google-cloud-cli",
      "id": "Cleanup Deployment",
      "entrypoint": "bash",
      "args": [
        "cleanup.sh"
      ]
    }
  ]
}
