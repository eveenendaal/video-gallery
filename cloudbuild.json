{
  "steps": [
    {
      "name": "node:18",
      "entrypoint": "yarn",
      "id": "Yarn Install",
      "args": [
        "install"
      ]
    },
    {
      "name": "node:18",
      "entrypoint": "yarn",
      "id": "Yarn Compile Typescript",
      "args": [
        "run",
        "compile:ts"
      ]
    },
    {
      "name": "node:18",
      "entrypoint": "yarn",
      "id": "Yarn Compile SCSS",
      "args": [
        "run",
        "compile:scss"
      ]
    },
    {
      "name": "node:18",
      "entrypoint": "yarn",
      "id": "Yarn Cleanup",
      "args": [
        "install",
        "--production"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Build Docker Image",
      "args": [
        "build",
        "-t",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Upload Docker Image",
      "args": [
        "push",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery"
      ]
    },
    {
      "name": "aquasec/trivy:latest",
      "id": "Run Trivy",
      "args": [
        "image",
        "--format",
        "json",
        "--output",
        "scan-$SHORT_SHA-$BUILD_ID.json",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery:latest"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/google-cloud-cli",
      "entrypoint": "gcloud",
      "id": "Deploy Docker Image",
      "args": [
        "run",
        "deploy",
        "videogallery",
        "--image=europe-west4-docker.pkg.dev/veenendaal-base/docker/videogallery:latest",
        "--region=europe-west4",
        "--project=veenendaal-base"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/google-cloud-cli",
      "id": "Cleanup Deployment",
      "entrypoint": "bash",
      "args": [
        "cleanup.sh"
      ]
    }
  ],
  "artifacts": {
    "objects": {
      "location": "gs://veenendaal-scans/veenendaal-base/video-gallery",
      "paths": [
        "scan-$SHORT_SHA-$BUILD_ID.json"
      ]
    }
  }
}
