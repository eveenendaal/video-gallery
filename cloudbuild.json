{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Install",
      "args": [
        "install"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Compile Typescript",
      "args": [
        "run",
        "compile:ts"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Compile SCSS",
      "args": [
        "run",
        "compile:scss"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/yarn",
      "id": "Yarn Cleanup",
      "args": [
        "install",
        "--production"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Build Docker Image",
      "args": [
        "build",
        "-t",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/video-gallery",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "id": "Upload Docker Image",
      "args": [
        "push",
        "europe-west4-docker.pkg.dev/veenendaal-base/docker/video-gallery"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "id": "Deploy Docker Image",
      "args": [
        "run",
        "deploy",
        "video-gallery",
        "--image=europe-west4-docker.pkg.dev/veenendaal-base/docker/video-gallery:latest",
        "--region=europe-west4",
        "--project=veenendaal-base"
      ]
    }
  ]
}