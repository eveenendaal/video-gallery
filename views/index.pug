doctype html
html
    head
        meta(name="viewport", content="width=device-width,initial-scale=1.0")
        title #{gallery}
        link(rel='stylesheet' href='/css/styles.css')
    body
        div.container
            div.hero.is-dark
                div.hero-body
                    h1.title.is-1 #{gallery}
            div.videos
                each file in videos
                    div.content.video
                        div.columns.is-vcentered
                            div.column.is-narrow.has-text-centered-mobile
                                a.button.is-link(href=file.url) Play
                            div.column
                                div.subtitle.is-5 #{file.name}
